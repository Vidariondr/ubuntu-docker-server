{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "docker:enableMajor"
  ],
  "enabledManagers": [
    "docker-compose"
  ],
  "customManagers": [
    {
      "managerFilePatterns": [
        "^.*\\.yml$"
      ],
      "matchStrings": [
        "image:\\s*['\"]?(?<depName>[^:]+):(?<currentValue>[^\\s'\"]+)['\"]?"
      ],
      "datasourceTemplate": "docker"
    }
  ],
  "includePaths": [
    "**"
  ],
  "docker-compose": {
    "enabled": true
  }
}
