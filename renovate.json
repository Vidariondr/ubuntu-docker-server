{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "docker:enableMajor"
  ],
  "enabledManagers": [
    "docker-compose",
    "dockerfile",
    "regex"
  ],
  "regexManagers": [
    {
      "fileMatch": [
        "^.*\\.yml$",
        "^.*\\.yaml$"
      ],
      "matchStrings": [
        "image:\\s*['\"]?(?<depName>[^:]+):(?<currentValue>[^\\s'\"]+)['\"]?"
      ],
      "datasourceTemplate": "docker"
    }
  ],
  "includePaths": [
    "**"
  ],
  "docker": {
    "enabled": true
  }
}
