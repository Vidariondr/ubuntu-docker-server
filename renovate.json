{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "docker:enableMajor"
  ],
  "enabledManagers": [
    "docker-compose",
    "dockerfile",
    "regex"
  ],
  "regexManagers": [
    {
      "fileMatch": [
        "^.*\\.yml$",
        "^.*\\.yaml$"
      ],
      "matchStrings": [
        "image:\\s*['\"]?(?<depName>[^:]+):(?<currentValue>[^\\s'\"]+)['\"]?",
        "IMAGE_VERSION\\s*=\\s*['\"]?(?<currentValue>[^'\"\\s]+)['\"]?",
        "(?<depName>[a-zA-Z0-9-_\\.]+/[a-zA-Z0-9-_\\.]+):(?<currentValue>[^\\s'\"]+)"
      ],
      "datasourceTemplate": "docker"
    }
  ],
  "includePaths": [
    "**"
  ],
  "docker": {
    "enabled": true,
    "pinDigests": false
  }
}
