{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "docker:enableMajor"
  ],
  "enabledManagers": [
    "docker-compose",
    "regex"
  ],
  "packageRules": [
    {
      "matchPackageNames": ["fireflyiii/core"],
      "versioning": "regex:^version-(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)$"
    },
    {
      "matchPackageNames": ["hotio/readarr"],
      "versioning": "regex:^testing-(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)\\.(?<build>\\d+)$",
      "registryUrls": ["https://hotio.dev/"],
      "datasourceTemplate": "docker"
    },
    {
      "matchPackageNames": ["ghcr.io/alexta69/metube"],
      "versioning": "regex:^(?<major>\\d{4})-(?<minor>\\d{2})-(?<patch>\\d{2})$"
    }
  ],
  "regexManagers": [
    {
      "fileMatch": [
        "^.*\\.yml$"
      ],
      "matchStrings": [
        "image:\\s*['\"]?(?<depName>[^:]+):(?<currentValue>[^\\s'\"]+)['\"]?"
      ],
      "datasourceTemplate": "docker"
    }
  ],
  "includePaths": [
    "**"
  ],
  "docker": {
    "enabled": true,
    "pinDigests": false
  }
}
