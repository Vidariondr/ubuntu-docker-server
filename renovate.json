{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "docker:enableMajor"
  ],
  "enabledManagers": [
    "docker-compose",
    "regex"
  ],
  "packageRules": [
    {
      "matchPackageNames": ["fireflyiii/core"],
      "versioning": "regex:^version-(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)$"
    }
  ],
  "regexManagers": [
    {
      "fileMatch": [
        "^.*\\.yml$"
      ],
      "matchStrings": [
        "image:\\s*['\"]?(?<depName>[^:]+):(?<currentValue>[^\\s'\"]+)['\"]?"
      ],
      "datasourceTemplate": "docker"
    }
  ],
  "includePaths": [
    "**"
  ],
  "docker": {
    "enabled": true,
    "pinDigests": false
  }
}
